{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"util": "readonly",
		"wikibase": "readonly",
		"Vue": "readonly",
		"Vuex": "readonly",
		"global": "readonly"
	},
	"plugins": [
		"promise",
		"compat"
	],
	"rules": {
		"compat/compat": "error",
		"indent": [
			"error",
			"tab",
			{
				"CallExpression": {
					"arguments": "first"
				}
			}
		],
		"no-jquery/no-global-selector": "off",
		"no-underscore-dangle": "off",
		"max-len": "off",
		"operator-linebreak": "off",
		"promise/no-native": "error",
		"mediawiki/no-nodelist-unsupported-methods": "warn",
		"no-var": "off",
		"prefer-arrow-callback": "off"
	},
	"settings": {
		"jsdoc": {
			"preferredTypes": {
				"ControllerViewFactory": "ControllerViewFactory",
				"datamodel": "datamodel",
				"GrammaticalFeatureListWidget": "GrammaticalFeatureListWidget",
				"ItemLookup": "ItemLookup",
				"Lemma": "Lemma",
				"LemmaList": "LemmaList",
				"LexemeDeserializer": "LexemeDeserializer",
				"ReadModeViewFactory": "ReadModeViewFactory",
				"RepoApi": "RepoApi"
			}
		}
	},
	"overrides": [
		{
			"files": [ "cypress/**/*.ts" ],
			"extends": [
				"@wmde/wikimedia-typescript"
			]
		}
	]
}
